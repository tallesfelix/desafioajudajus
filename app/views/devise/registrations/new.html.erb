<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, 'Nome Completo' %><br />
    <%= f.text_field :name , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :cpf, 'CPF' %><br />
    <%= f.text_field :cpf , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :birth, 'Data de Nascimento' %><br />
    <%= f.date_field :birth , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :maritalstatus, 'Estado Civil' %><br />
    <%= f.select :maritalstatus ,['Solteiro(a)', 'Casado(a)', 'Divorciado(a)', 'Viuvo(a)'] ,autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :telephone, 'Telefone' %><br />
    <%= f.text_field :telephone , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :neighborhood, 'Bairro' %><br />
    <%= f.text_field :neighborhood , autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :state, 'Estado' %><br />
    <%= f.text_field :state , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :city, 'Cidade' %><br />
    <%= f.text_field :city , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :street, 'EndereÃ§o' %><br />
    <%= f.text_field :street , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, 'Senha' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Repita a Senha' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
