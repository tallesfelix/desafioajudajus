<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name, 'Nome Completo' %><br />
    <%= f.text_field :name , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :cpf, 'CPF' %><br />
    <%= f.text_field :cpf , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :birth, 'Data de Nascimento' %><br />
    <%= f.date_field :birth , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :maritalstatus, 'Estado Civil' %><br />
    <%= f.select :maritalstatus ,['Solteiro(a)', 'Casado(a)', 'Divorciado(a)', 'Viuvo(a)'] ,autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :telephone, 'Telefone' %><br />
    <%= f.text_field :telephone , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :neighborhood, 'Bairro' %><br />
    <%= f.text_field :neighborhood , autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :state, 'Estado' %><br />
    <%= f.text_field :state , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :city, 'Cidade' %><br />
    <%= f.text_field :city , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :street, 'EndereÃ§o' %><br />
    <%= f.text_field :street , autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "off" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
