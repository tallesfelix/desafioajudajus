<!DOCTYPE html>
<html>
  <head>
    <title>Ajuda4</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
       <div class='nav navbar navbar-default' >
      <div class='container'>
        <div class='navbar-brand'>
          <%= link_to 'AjudaJusDesafio', root_path %>
        </div>
        <ul class='nav navbar-nav navbar-right'>
        <% if user_signed_in? %>
            <li><%= link_to 'Minhas Causas', causes_path %></li>
            <li><%= link_to 'Nova Causa', new_cause_path %></li>
            <li><%= link_to 'Conta', edit_user_registration_path %></li>
            <li><%= link_to 'Sair', destroy_user_session_path, method: :delete %></li>
          <% else %>
            <li><%= link_to 'Cadastre-se', new_user_registration_path %></li>
            <li><%= link_to 'Login', new_user_session_path %></li>
          </ul>
        <% end %>
      </div>
    </div>
    <div class='container'>
        <%= yield %>
    </div>
  </body>
</html>
